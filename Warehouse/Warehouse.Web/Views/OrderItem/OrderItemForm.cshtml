@model Warehouse.Web.ViewModels.OrderItemViewModel
@{
    ViewBag.Title = "Order Item";
    Layout = "_Layout";
}
<h1>Order Item</h1>
<form method="post" asp-controller="OrderItem" asp-action="Save">
    <div class="form-group">
        <label asp-for="ItemId" class="col-form-label"></label>
        <select asp-for="ItemId" asp-items="@Model.ItemSelectList"></select>
        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-form-label"></label><br />
        <input type="number" min="0.01" step="0.01" asp-for="Price" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="col-form-label"></label><br />
        <input type="number" min="1.00" step="1" asp-for="Quantity" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount" class="col-form-label"></label><br />
        <input type="number" min="0.00" max="0.99" step="0.01" asp-for="Discount" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden" />
    <input asp-for="IsDeleted" type="hidden" />
    <input asp-for="OrderId" type="hidden" />
    <input asp-for="SumWithoutDiscount" type="hidden" />
    <input asp-for="SumWithDiscount" type="hidden" />
    <input type="submit" value="Save" />
</form>
