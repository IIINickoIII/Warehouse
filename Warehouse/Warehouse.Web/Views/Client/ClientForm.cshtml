@model Warehouse.Web.ViewModels.ClientViewModel
@{
    ViewBag.Title = "Client";
    Layout = "_Layout";
}
<h1>Client</h1>
<form method="post" asp-controller="Client" asp-action="Save">
    <div class="form-group">
        <label asp-for="Nickname" class="col-form-label"></label><br />
        <input asp-for="Nickname" class="form-control" />
        <span asp-validation-for="Nickname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-form-label"></label><br />
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-form-label"></label><br />
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label><br />
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label><br />
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <fieldset class="form-group">
        <div class="form-check">
            <input asp-for="IsCustomer" class="form-check-input">
            <label asp-for="IsCustomer" class="form-check-label"></label>
            <span asp-validation-for="IsCustomer" class="text-danger"></span>
        </div>
    </fieldset>
    <fieldset class="form-group">
        <div class="form-check">
            <input asp-for="IsProvider" class="form-check-input">
            <label asp-for="IsProvider" class="form-check-label"></label>
            <span asp-validation-for="IsProvider" class="text-danger"></span>
        </div>
    </fieldset>
    <input asp-for="Id" type="hidden" />
    <input asp-for="IsDeleted" type="hidden" />
    <input type="submit" value="Save" />
</form>