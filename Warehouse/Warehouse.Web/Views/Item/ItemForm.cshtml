@model Warehouse.Web.ViewModels.ItemViewModel
@{
    ViewBag.Title = "Item";
    Layout = "_Layout";
}
<h1>Item</h1>
<form method="post" asp-controller="Item" asp-action="Save">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label><br />
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-form-label"></label><br />
        <input type="number" min="0.00" step="0.01" asp-for="Price" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount" class="col-form-label"></label><br />
        <input type="number" min="0" step="1" max="99" asp-for="Discount" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitInStock" class="col-form-label"></label><br />
        <input type="number" min="0" step="1" asp-for="UnitInStock" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="UnitInStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProducerId" class="col-form-label"></label>
        <select asp-for="ProducerId" asp-items="@Model.ProducerSelectList"></select>
        <span asp-validation-for="ProducerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="col-form-label"></label>
        <select asp-for="CategoryId" asp-items="@Model.CategorySelectList"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden" />
    <input asp-for="IsDeleted" type="hidden" />
    <input type="submit" value="Save" />
</form>