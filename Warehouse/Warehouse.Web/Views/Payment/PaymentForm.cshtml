@model Warehouse.Web.ViewModels.PaymentViewModel
@{
    ViewBag.Title = "Payment";
    Layout = "_Layout";
}
<h1>Payment</h1>
<form method="post" asp-controller="Payment" asp-action="Save">
    <div class="form-group">
        <label asp-for="Date" class="col-form-label"></label><br />
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientId" class="col-form-label"></label>
        <select asp-for="ClientId" asp-items="@Model.ClientSelectList"></select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <fieldset class="form-group">
        <div class="form-check">
            <input asp-for="IsInCome" class="form-check-input">
            <label asp-for="IsInCome" class="form-check-label"></label>
            <span asp-validation-for="IsInCome" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="form-group">
        <label asp-for="TotalSum" class="col-form-label"></label><br />
        <input type="number" min="0.00" step="0.01" asp-for="TotalSum" class="form-control" onkeydown="return event.keyCode !== 69">
        <span asp-validation-for="TotalSum" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden" />
    <input asp-for="IsDeleted" type="hidden" />
    <input type="submit" value="Save" />
</form>